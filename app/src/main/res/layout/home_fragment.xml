<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tool:context=".MainActivity">
    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.foolself.baiduwall.view.Ad_scroll
                android:id="@+id/myAdScroll"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
            </com.foolself.baiduwall.view.Ad_scroll>

            <com.foolself.baiduwall.view.MyGridView
                android:id="@+id/myGridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="2dp"
                android:horizontalSpacing="2dp"
                android:layout_below="@+id/myAdScroll">
            </com.foolself.baiduwall.view.MyGridView>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/myGridView"
                android:clickable="true"
                android:background="@drawable/bottom_select">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_more_icon_feedback"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/idea"
                        android:textSize="16dp"
                        android:layout_marginLeft="16dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>